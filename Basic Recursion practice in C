#include <cs50.h>
#include <stdio.h>
#include <strings.h>

int naturalNumbers(int n);

int main(void)
{
    // Get input
    int n;
    do
    {
        n = get_int("int: ");
    }
    while (n < 0);

    // Call to function
    printf("%i\n", naturalNumbers(n));
}


int naturalNumbers(int n)
{
    if (n == 1)
    {
        return 1;
    }

    return naturalNumbers(n-1) + n;
}









