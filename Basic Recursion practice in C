#include <cs50.h>
#include <stdio.h>
#include <strings.h>

int fibonacci(int n);

int main(void)
{

    int input;
    do
    {
        input = get_int("Integer: ");
    }
    while (input < 0);


    // function call
    printf("%i\n", fibonacci(input));

}


int fibonacci(int n)
{
    if (n == 0)
    {
        return 0;
    }
    else if (n == 1)
    {
        return 1;
    }
    return fibonacci(n-1) + fibonacci(n-2);
}






