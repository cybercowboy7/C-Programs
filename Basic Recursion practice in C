#include <cs50.h>
#include <stdio.h>
#include <string.h>

void reverse_string(char str[], int start, int end);

int main(void)
{

    string input = get_string("Input: ");

    int length = strlen(input);

    reverse_string(input, 0, length - 1);

    printf("Reverse string: %s\n", input);
}


void reverse_string(char str[], int start, int end)
{
    if (start >= end)
    {
        return;
    }

    char temp = str[start];
    str[start] = str[end];
    str[end] = temp;

    reverse_string(str, start + 1, end - 1);
}





